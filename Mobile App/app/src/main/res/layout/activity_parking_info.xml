<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ParkingInfoActivity"
    android:layout_marginLeft="@dimen/btn_margin"
    android:layout_marginRight="@dimen/btn_margin"
    android:elevation="8dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/bottom_button"
        android:background="#E9EAEA"
        android:layout_gravity="top"
        android:visibility="visible">

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/rupee"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/systemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="4dp"
            android:text="System Name"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="85dp" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/systemName"
            android:layout_below="@+id/systemName"
            android:text="Cost"
            android:layout_alignLeft="@+id/systemName" />

        <TextView
            android:id="@+id/availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/systemName"
            android:layout_below="@+id/cost"
            android:text="Availability"
            android:layout_alignLeft="@+id/systemName" />

        <ImageView
            android:id="@+id/toolbarImage"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:layout_below="@+id/place_image"
            android:src="@drawable/mapimage"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="H\nE\nL\nL\nO\nO\nO\nO"
        android:padding="5dp"/>

    <Button
        android:id="@+id/bookslot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book My Spot"
        android:textColor="@color/colorWhite"
        android:background="@color/black"
        android:elevation="16dp"
        android:layout_gravity="bottom"
        android:visibility="visible"/>

</LinearLayout>